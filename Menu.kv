#:import Clipboard kivy.core.clipboard.Clipboard
#: kivy 2.2

<Tela_Inicial>
	MDBoxLayout:
		orientation: 'vertical'
		md_bg_color: [0.2,0.2,0.2,1]
		padding:5
		spacing:5
		MDBoxLayout:
			size_hint_y: 0.05
			spacing:5
			MDBoxLayout:
				md_bg_color: [1,1,1,1]
				radius:[10,]
				MDLabel:
					text: root.ids.Gerenc_telas.current
					text_size:self.width,None
					halign:'center'
					font_size:self.height*0.4
			MDBoxLayout:
				size_hint_x:0.4
				md_bg_color: [1,1,1,1]
				radius:[10,]
				MDLabel:
					text: "Indice : "
					text_size:self.width,None
					halign:'center'
					font_size:self.height*0.5
				MDLabel:
					id: indice_label

					size_hint_x:0.3
					text: "1"
					text_size:self.width,None
					font_size:self.height*0.5

			MDBoxLayout:
				size_hint_x: 0.2
				md_bg_color: [0.3,0.3,0.3,1]
				radius:[10,]
				MDIconButton:
					size_hint:1,1
					icon:'./icons/chevron-double-left.png'
					icon_size:self.height*0.8
					on_release:app.Anter_arq()

			MDBoxLayout:
				size_hint_x: 0.2
				md_bg_color: [0.3,0.3,0.3,1]
				radius:[10,]
				MDIconButton:
					size_hint:1,1
					icon:'./icons/chevron-double-right.png'
					icon_size:self.height*0.8
					on_release:app.Prox_arq()
		MDBoxLayout:
			radius:[10,]
			md_bg_color: [0,0,0,1]
			MDScreenManager:
				id:Gerenc_telas
				MDScreen:
					name:'default'
					ScrollView:
						id: Tela_rolavel
						size_hint_y:1
						MDBoxLayout:
							orientation:'vertical'
							id: Categorias
							size_hint_y: None
							height: self.minimum_height
							padding:5
							spacing:5
						

<Box_Telas>
	ScrollView:
		id: Tela_rolavel
		size_hint_y:1
		MDBoxLayout:
			orientation:'vertical'
			id: Categorias
			size_hint_y: None
			height: self.minimum_height
			padding:5
			spacing:5


<Box_categorias>
	md_bg_color:[0.2,0.2,0.2,1]
	radius:[5,]
	orientation:"vertical"
	adaptive_height:True
	padding:5
	MDLabel:
		id: Titulo_Categoria
		size_hint_y:None
		color:[1,1,1,1]
		height:app.root.ids.Tela_rolavel.height *0.03
		padding_x:5
		text_size:self.width,None
		font_size:self.height*0.8
	MDBoxLayout:
		id:Box_Bau
		orientation:"vertical"
		spacing:5

	

<Box_SubCategorias>
	size_hint_y:None
	height:app.root.ids.Tela_rolavel.height *0.07
	padding:2
	MDBoxLayout:
		md_bg_color:[0.4,0.4,0.4,1]
		radius:5
		padding:[0,2,2,2]
		MDBoxLayout:
			orientation:"vertical"
			MDBoxLayout:
				MDLabel:
					id:Sub_Titulo

					color:[1,1,1,1]
					text_size:self.width,None
					padding_x:5
					font_size:self.height*0.8
			MDBoxLayout:
				MDLabel:
					id:Sub_Texto

					padding_x:10
					text_size:self.width,self.height
					font_size:self.height*0.6
		MDBoxLayout:
			size_hint_x:0.1
			radius:5
			md_bg_color:[1,1,1,1]
			MDIconButton:
				size_hint:1,1
				icon:'./icons/content-copy.png'
				on_release: Clipboard.copy(Sub_Texto.text)
			